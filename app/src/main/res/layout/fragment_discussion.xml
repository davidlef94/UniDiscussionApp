<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DiscussionFragment">

    <android.support.v7.widget.RecyclerView

        android:id="@+id/discussion_list_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="362dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </android.support.v7.widget.RecyclerView>


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="121dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/discussion_list_recycler_view">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp">


            <EditText
                android:id="@+id/discussion_content_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/message_content"/>

        </RelativeLayout>

        <Button
            android:id="@+id/send_button"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="@string/send"
            android:textAllCaps="false"
            android:background="@drawable/send_button_shape"
            android:layout_marginTop="65dp"
            android:layout_marginStart="260dp"/>

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>